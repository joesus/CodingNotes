<% content_for :head do %>
		<%= stylesheet_link_tag "common.css", "google-map.css" %>
    <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
	  <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <%= javascript_include_tag "google-map" %>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
<% end %>

	</head>
	<body>
		<div id="map"></div>
		<div id="ui">
			<h1>I am Mover</h1>
			<p>Enter the weight of your good below and click on two different places on the map to see the distance between them and the cost of moving your goods.</p>
			<h3>Our charges</h3>
			<dl class="clearfix">
				<dt>Base rate (per mile)</dt>
				<dd>&pound;3</dd>
				<dt>Cost per kg per mile</dt>
				<dd>&pound;0.25</dd>
			</dl>
			<input id="weight" placeholder="Weight (kg)" />
		</div>
		<div id="hqInfo">
			<img class="float-left" src="http://placehold.it/140x100" />
			<h1>I Am Mover</h1>
			<p>This is where we are based.</p>
			<p>Call: 0123456789</p>
			<p>email: info@i-am-mover.com</p>
		</div>
			
	</body>
</html>