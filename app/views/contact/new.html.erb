<div class="page-header">
	<h1>
		<span class="glyphicon glyphicon-envelope"></span>  Contact Joe
	</h1>
</div>

<%= form_for(@message, url: contact_path, html: {class: 'form'}) do |form| %>

	<%= render 'contact/error_messages', object: form.object %>

		<div class="form-group">
      <%= form.label(:name, class: "pull-left") %>
      <%= form.text_field(:name, class: "form-control") %>
    </div>
    
    <div class="form-group">
      <%= form.label(:email, class: "pull-left") %>
      <%= form.text_field(:email, class: "form-control") %>
    </div>
    <div class="form-group">
      <%= form.label(:subject, class: "pull-left") %>
      <%= form.text_field(:subject, class: "form-control") %>
    </div>
    
		<div class="form-group">
      <%= form.label(:body, class: "pull-left") %>
      <%= form.text_area(:body, class: "form-control") %>
    </div>

    <%= form.submit "Send" %>
<% end %>

